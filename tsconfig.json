{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "dist/",
    "sourceMap": true,
    "lib": [ "es6" ],
    "target": "ES5",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "typings/index.d.ts",
    "custom-typings/*"
  ],
  "exclude": [
    "node_modules"
  ],
" typeRoots": [
    "typings/global",
    "typings/modules"
  ]  
}